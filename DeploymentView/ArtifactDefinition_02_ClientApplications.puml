@startuml ArtifactDefinition_ClientApplications
!pragma layout smetana
skinparam componentStyle rectangle
skinparam artifactStyle rectangle

title Artifact Definition Diagram - Client Applications

' ==================== CLIENT ZONE ====================
cloud "Client Zone" {
  
  ' ============ CUSTOMER MOBILE DEVICE ============
  node "Customer Mobile Device\n[multiplicity: 10,000+]" as CustomerDevice <<device>> {
    
    ' iOS
    artifact "customer-app.ipa" as CustomerIPA <<artifact, iOS>> {
      component "Customer App\n(iOS)" as CustomerIOSApp
    }
    
    ' Android
    artifact "customer-app.apk" as CustomerAPK <<artifact, Android>> {
      component "Customer App\n(Android)" as CustomerAndroidApp
    }
    
    artifact "app-config.json" as CustomerConfig <<artifact>>
    artifact "tls-certificates.pem" as CustomerTLS <<artifact>>
    
    artifact "react-native-0.72.js" as ReactNative1 <<artifact, library>>
    artifact "axios-1.5.js" as Axios1 <<artifact, library>>
    artifact "fcm-sdk-9.2.js" as FCMSDKCustomer <<artifact, library>>
    
    CustomerIPA ..> CustomerConfig : <<deploy>>
    CustomerIPA ..> CustomerTLS : <<deploy>>
    CustomerAPK ..> CustomerConfig : <<deploy>>
    CustomerAPK ..> CustomerTLS : <<deploy>>
    
    CustomerIPA --> ReactNative1 : <<dependency>>
    CustomerIPA --> Axios1 : <<dependency>>
    CustomerIPA --> FCMSDKCustomer : <<dependency>>
    
    CustomerAPK --> ReactNative1 : <<dependency>>
    CustomerAPK --> Axios1 : <<dependency>>
    CustomerAPK --> FCMSDKCustomer : <<dependency>>
    
    note right of CustomerDevice
      **QA: Security (QAS-04)**
      - Certificate Pinning (tls-certificates.pem)
      - TLS 1.3 encrypted communication
      
      **QA: Usability**
      - Cross-platform (iOS/Android)
      - React Native for fast iteration
    end note
  }
  
  ' ============ HELPER MOBILE DEVICE ============
  node "Helper Mobile Device\n[multiplicity: 1,000+]" as HelperDevice <<device>> {
    
    ' iOS
    artifact "helper-app.ipa" as HelperIPA <<artifact, iOS>> {
      component "Helper App\n(iOS)" as HelperIOSApp
    }
    
    ' Android
    artifact "helper-app.apk" as HelperAPK <<artifact, Android>> {
      component "Helper App\n(Android)" as HelperAndroidApp
    }
    
    artifact "app-config.json" as HelperConfig <<artifact>>
    artifact "tls-certificates.pem" as HelperTLS <<artifact>>
    
    artifact "react-native-0.72.js" as ReactNative2 <<artifact, library>>
    artifact "axios-1.5.js" as Axios2 <<artifact, library>>
    artifact "react-native-image-picker-5.6.js" as ImagePicker <<artifact, library>>
    
    HelperIPA ..> HelperConfig : <<deploy>>
    HelperIPA ..> HelperTLS : <<deploy>>
    HelperAPK ..> HelperConfig : <<deploy>>
    HelperAPK ..> HelperTLS : <<deploy>>
    
    HelperIPA --> ReactNative2 : <<dependency>>
    HelperIPA --> Axios2 : <<dependency>>
    HelperIPA --> ImagePicker : <<dependency>>
    
    HelperAPK --> ReactNative2 : <<dependency>>
    HelperAPK --> Axios2 : <<dependency>>
    HelperAPK --> ImagePicker : <<dependency>>
    
    note right of HelperDevice
      **QA: Performance**
      - Image compression (local processing)
      - Offline caching for network failures
      
      **QA: Usability**
      - Native camera API integration
      - Image picker library
    end note
  }
  
  ' ============ MANAGER MOBILE DEVICE ============
  node "Manager Mobile Device\n[multiplicity: 1,000+]" as ManagerDevice <<device>> {
    
    ' iOS
    artifact "manager-app.ipa" as ManagerIPA <<artifact, iOS>> {
      component "Manager App\n(iOS)" as ManagerIOSApp
    }
    
    ' Android
    artifact "manager-app.apk" as ManagerAPK <<artifact, Android>> {
      component "Manager App\n(Android)" as ManagerAndroidApp
    }
    
    artifact "app-config.json" as ManagerConfig <<artifact>>
    artifact "tls-certificates.pem" as ManagerTLS <<artifact>>
    artifact "fcm-device-token.txt" as FCMToken <<artifact>>
    
    artifact "react-native-0.72.js" as ReactNative3 <<artifact, library>>
    artifact "axios-1.5.js" as Axios3 <<artifact, library>>
    artifact "fcm-sdk-9.2.js" as FCMSDKManager <<artifact, library>>
    
    ManagerIPA ..> ManagerConfig : <<deploy>>
    ManagerIPA ..> ManagerTLS : <<deploy>>
    ManagerIPA ..> FCMToken : <<deploy>>
    ManagerAPK ..> ManagerConfig : <<deploy>>
    ManagerAPK ..> ManagerTLS : <<deploy>>
    ManagerAPK ..> FCMToken : <<deploy>>
    
    ManagerIPA --> ReactNative3 : <<dependency>>
    ManagerIPA --> Axios3 : <<dependency>>
    ManagerIPA --> FCMSDKManager : <<dependency>>
    
    ManagerAPK --> ReactNative3 : <<dependency>>
    ManagerAPK --> Axios3 : <<dependency>>
    ManagerAPK --> FCMSDKManager : <<dependency>>
    
    note right of ManagerDevice
      **QA: Availability (QAS-01)**
      - FCM Push notification (< 15초 alert)
      - Device token registration
      
      **QA: Security (QAS-04)**
      - Role-Based Access Control (Manager role)
      - Certificate pinning
    end note
  }
  
  ' ============ OPERATIONS WORKSTATION ============
  node "Operations Workstation\n[multiplicity: 5-10]" as OpsDevice <<device>> {
    
    artifact "admin-dashboard.js" as AdminJS <<artifact, web>> {
      component "Admin Dashboard\n(React SPA)" as AdminApp
    }
    
    artifact "admin-dashboard.html" as AdminHTML <<artifact, web>>
    artifact "admin-dashboard.css" as AdminCSS <<artifact, web>>
    artifact "dashboard-config.json" as DashboardConfig <<artifact>>
    
    artifact "react-18.2.js" as React <<artifact, library>>
    artifact "recharts-2.8.js" as Recharts <<artifact, library>>
    artifact "axios-1.5.js" as Axios4 <<artifact, library>>
    
    AdminJS ..> AdminHTML : <<deploy>>
    AdminJS ..> AdminCSS : <<deploy>>
    AdminJS ..> DashboardConfig : <<deploy>>
    
    AdminJS --> React : <<dependency>>
    AdminJS --> Recharts : <<dependency>>
    AdminJS --> Axios4 : <<dependency>>
    
    note right of OpsDevice
      **QA: Security (QAS-04)**
      - MFA (Multi-Factor Authentication)
      - IP Whitelist
      - Admin RBAC
      
      **QA: Modifiability**
      - SPA (No installation)
      - Server-side update (auto refresh)
      
      **QA: Usability**
      - Real-time monitoring dashboard
      - MLOps management UI
    end note
  }
}

' ==================== EXTERNAL INTEGRATIONS ====================
CustomerIPA ..> "API Gateway" : <<HTTPS>>
CustomerAPK ..> "API Gateway" : <<HTTPS>>
HelperIPA ..> "API Gateway" : <<HTTPS>>
